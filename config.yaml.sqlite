# Database Configuration
database:
  driver: sqlite3  # sqlite or postgres
  # SQLite configuration
  path: /home/dsl/data/emailtoapi/reader.db

# Admin Server Configuration
adminserver:
  host: 0.0.0.0
  port: 8808

# Mail Server Configuration
mailserver:
  host: 0.0.0.0
  port: 25
  domain: example.com  # Domain for generated email addresses
  receivemethod: smtp  # smtp or webhook
  maxemailsize: 10485760  # 10MB in bytes
  maxretries: 10
  retrydelay: 5
  smtphost: 0.0.0.0
  smtpport: 25

# Mailgun Configuration (optional)
mailgun:
  apikey: ""
  domain: ""
  fromaddress: ""

# Site Configuration
site:
  domain: mail.srvx.us 
